{
  "name": "@codex-native/sdk",
  "version": "0.0.9",
  "description": "Native NAPI-based Codex SDK - complete standalone implementation.",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "bin": {
    "codex-native": "dist/cli.cjs"
  },
  "files": [
    "dist",
    "index.js",
    "index.d.ts",
    "README.md"
  ],
  "scripts": {
    "artifacts": "napi artifacts",
    "build": "napi build --platform --release --features napi-bindings && tsup",
    "build:debug": "napi build --platform --features napi-bindings && tsup",
    "prepublishOnly": "napi prepublish -t npm",
    "test": "node ./scripts/run-jest.mjs --runInBand",
    "version": "napi version"
  },
  "napi": {
    "binaryName": "codex_native",
    "targets": [
      "aarch64-apple-darwin",
      "x86_64-apple-darwin",
      "aarch64-unknown-linux-gnu",
      "x86_64-unknown-linux-gnu",
      "aarch64-unknown-linux-musl",
      "x86_64-unknown-linux-musl",
      "aarch64-pc-windows-msvc",
      "x86_64-pc-windows-msvc"
    ]
  },
  "optionalDependencies": {
    "@codex-native/sdk-darwin-arm64": "0.0.9",
    "@codex-native/sdk-darwin-x64": "0.0.9",
    "@codex-native/sdk-linux-arm64-gnu": "0.0.9",
    "@codex-native/sdk-linux-x64-gnu": "0.0.9",
    "@codex-native/sdk-linux-arm64-musl": "0.0.9",
    "@codex-native/sdk-linux-x64-musl": "0.0.9",
    "@codex-native/sdk-win32-arm64-msvc": "0.0.9",
    "@codex-native/sdk-win32-x64-msvc": "0.0.9"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.22.0",
    "@openai/agents": "^0.3.3",
    "@openai/agents-core": "^0.3.3",
    "@opencode-ai/sdk": "^1.0.164",
    "@toon-format/toon": "^1.0.0",
    "pyright": "^1.1.386",
    "typescript-language-server": "^4.3.3",
    "vscode-jsonrpc": "^8.2.1",
    "vscode-languageserver-types": "^3.17.5"
  },
  "devDependencies": {
    "@babel/core": "7.25.2",
    "@babel/preset-env": "7.25.4",
    "@babel/preset-typescript": "7.28.5",
    "@jest/globals": "^29.7.0",
    "@napi-rs/cli": "^3.4.1",
    "@openai/agents": "^0.3.0",
    "@types/jest": "29.5.14",
    "@types/node": "^22.0.0",
    "babel-jest": "29.7.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsup": "^8.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5.7.2",
    "zod": "^3.25.76"
  },
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  }
}
